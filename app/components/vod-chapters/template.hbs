{{#each chapters as |chapter|}}
  <div {{action 'cueTo' chapter}}
       data-chapter={{chapter.id}}
       class="vod-chapters-chapter {{if (eq chapter activeChapter) 'active'}}">
  	<h4>{{chapter.title}} <small>{{total-run-time chapter.offset}}</small></h4>
    <p>{{chapter.body}}</p>
  </div>
{{/each}}